<%# CSVインポート画面 %>
<h2 class="text-xl font-bold mb-4 px-2 sm:px-0">CSVインポート</h2>
<p class="mb-2 text-gray-600 px-2 sm:px-0">
  温泉データをCSVファイルで一括登録できます。<br>
  <span class="text-xs">ヘッダ: <code>name,geo_lat,geo_lng,description,tags</code>（順不同可）</span>
</p>
<div class="max-w-lg w-full mx-auto px-2 sm:px-0">
  <%= form_with url: admin_csv_imports_path, local: true, html: { multipart: true, class: "space-y-4" } do |f| %>
    <div>
      <%= f.file_field :file, accept: ".csv", class: "block w-full text-sm text-gray-700" %>
    </div>
    <div>
      <%= f.submit "インポート", class: "btn btn-primary w-full sm:w-auto" %>
    </div>
  <% end %>
</div>
