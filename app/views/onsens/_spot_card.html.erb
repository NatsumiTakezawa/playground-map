<%# 温泉スポットカード（Atomic Design: Molecule） %>
<%= link_to onsen_path(onsen), class: "block bg-white rounded shadow p-4 hover:bg-blue-50 transition cursor-pointer h-full focus:outline focus:ring-2 focus:ring-blue-400", 'aria-label': "#{onsen.name}の詳細" do %>
  <div class="flex items-center gap-4">
    <% if onsen.images.attached? %>
      <%= image_tag onsen.images.first, class: "w-20 h-20 object-cover rounded", alt: onsen.name %>
    <% else %>
      <div class="w-20 h-20 bg-gray-200 rounded flex items-center justify-center text-gray-400">No Image</div>
    <% end %>
    <div class="flex-1">
      <h2 class="text-lg font-semibold mb-1"><%= onsen.name %></h2>
      <div class="text-sm text-gray-500 mb-1"><%= truncate(onsen.description, length: 40) %></div>
      <div class="text-xs text-gray-400">タグ: <%= onsen.tags %></div>
      <div class="text-xs text-yellow-400 mb-1">
        <% if onsen.reviews.any? %>
          <%= render partial: "shared/rating_stars", locals: { rating: (onsen.reviews.average(:rating)&.round || 0) } %>
        <% else %>
          <span class="text-gray-300">未評価</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
